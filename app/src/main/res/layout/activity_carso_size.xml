<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.CargoSize"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_cargo_size"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="@color/background"
        >
        <TextView
            android:id="@+id/toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
            android:layout_gravity="center"
            android:textSize="18sp"
            android:text="Kargo Boyutu"
            android:textColor="@color/white"/>
    </androidx.appcompat.widget.Toolbar>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="24dp"
        android:layout_below="@id/toolbar_cargo_size"
        app:cardBackgroundColor="@color/light_black"
        android:layout_marginTop="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="24dp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_width"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="44dp"
                android:background="@drawable/black_solid_outlined_bg">


                <TextView
                    android:id="@+id/tv_width"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="En"
                    android:layout_weight="1"
                    android:textColor="@color/light"
                    android:textSize="16sp"
                    />

                <EditText
                    android:id="@+id/et_width"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:layout_weight="0.2"
                    android:inputType="number"
                    android:maxLength="4"
                    android:focusable="true"
                    android:textAlignment="textEnd"
                    android:background="@color/transparent"
                    android:textColor="@color/light"
                    android:maxLines="1"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_height"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="24dp"
                android:background="@drawable/black_solid_outlined_bg">


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Boy"
                    android:layout_weight="1"
                    android:textColor="@color/light"
                    android:textSize="16sp"
                    />

                <EditText
                    android:id="@+id/et_height"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:layout_weight="0.2"
                    android:inputType="number"
                    android:maxLength="4"
                    android:focusable="true"
                    android:textAlignment="textEnd"
                    android:background="@color/transparent"
                    android:textColor="@color/light"
                    android:maxLines="1"/>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_length"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="24dp"
                android:background="@drawable/black_solid_outlined_bg">


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Yükseklik"
                    android:layout_weight="1"
                    android:textColor="@color/light"
                    android:textSize="16sp"
                    />

                <EditText
                    android:id="@+id/et_length"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:layout_weight="0.2"
                    android:inputType="number"
                    android:maxLength="4"
                    android:focusable="true"
                    android:textAlignment="textEnd"
                    android:background="@color/transparent"
                    android:textColor="@color/light"
                    android:maxLines="1"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_weight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginVertical="24dp"
                android:background="@drawable/black_solid_outlined_bg">


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Ağırlık"
                    android:layout_weight="1"
                    android:textColor="@color/light"
                    android:textSize="16sp"
                    />

                <EditText
                    android:id="@+id/et_weight"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:layout_weight="0.2"
                    android:inputType="number"
                    android:maxLength="4"
                    android:focusable="true"
                    android:textAlignment="textEnd"
                    android:background="@color/transparent"
                    android:textColor="@color/light"
                    android:maxLines="1"/>
            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>
    <Button
        android:id="@+id/btn_save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/save"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="48dp"
        android:layout_marginHorizontal="42dp"
        android:layout_alignParentBottom="true"
        android:theme="@style/ThemeOverlay.Material3.Button.ElevatedButton"
        android:layout_marginTop="70dp"/>

</RelativeLayout>