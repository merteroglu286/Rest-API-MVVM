<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.Dashboard.Homepage.HomepageNestedFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="24dp">

        <TextView
            android:id="@+id/txt_categories"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="Kategoriler"
            android:textColor="@color/light_grey"
            android:layout_marginStart="20dp"
            />
        <TextView
            android:id="@+id/txt_search_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tümünü Gör"
            android:textSize="14dp"
            android:layout_marginTop="2dp"
            android:layout_alignParentEnd="true"
            android:textColor="@color/primary"
            android:layout_marginEnd="16dp"
            />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_categories"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_marginHorizontal="8dp"
            android:layout_below="@id/txt_categories"/>

        <TextView
            android:id="@+id/txt_featured_garages"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="En Hızlı Garajlar"
            android:textColor="@color/light_grey"
            android:layout_below="@id/rv_categories"
            android:layout_marginTop="33dp"
            android:layout_marginStart="20dp"
            />

        <TextView
            android:id="@+id/txt_garages_see_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tümünü Gör"
            android:textSize="14dp"
            android:layout_marginTop="35dp"
            android:layout_below="@id/rv_categories"
            android:layout_alignParentEnd="true"
            android:textColor="@color/primary"
            android:layout_marginEnd="16dp"
            />



        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_featured_garages"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginHorizontal="12dp"
            android:layout_below="@id/txt_featured_garages"/>

        <TextView
            android:id="@+id/txt_featured_products"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="Öne Çıkan Ürünler"
            android:textColor="@color/light_grey"
            android:layout_below="@id/rv_featured_garages"
            android:layout_marginTop="33dp"
            android:layout_marginStart="20dp"
            />

        <TextView
            android:id="@+id/txt_featured_products_see_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tümünü Gör"
            android:textSize="14sp"
            android:layout_marginTop="35dp"
            android:layout_below="@id/rv_featured_garages"
            android:layout_alignParentEnd="true"
            android:textColor="@color/primary"
            android:layout_marginEnd="16dp"
            />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_featured_products"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_featured_products"
            android:layout_marginTop="16dp"
            android:layout_marginHorizontal="8dp"/>


        <TextView
            android:id="@+id/txt_urgent_products"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="Acil İlanlar (48 Saat)"
            android:textColor="@color/light_grey"
            android:layout_below="@id/rv_featured_products"
            android:layout_marginTop="33dp"
            android:layout_marginStart="20dp"
            />

        <TextView
            android:id="@+id/txt_urgent_products_see_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tümünü Gör"
            android:textSize="14sp"
            android:layout_marginTop="35dp"
            android:layout_below="@id/rv_featured_products"
            android:layout_alignParentEnd="true"
            android:textColor="@color/primary"
            android:layout_marginEnd="16dp"
            />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_urgent_products"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_urgent_products"
            android:layout_marginTop="16dp"
            android:layout_marginHorizontal="8dp"/>

        <ImageView
            android:id="@+id/iv_margo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/margo_logo"
            android:layout_below="@id/rv_urgent_products"
            android:layout_marginVertical="44dp"
            android:layout_marginHorizontal="125dp"/>

        <LinearLayout
            android:id="@+id/ll_sponsors"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginHorizontal="20dp"
            android:layout_below="@id/iv_margo">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="110dp"
                android:layout_weight="1"
                android:background="@color/dark_grey"
                android:layout_marginHorizontal="8dp"/>
            <ImageView
                android:layout_width="0dp"
                android:layout_height="110dp"
                android:layout_weight="1"
                android:background="@color/dark_grey"
                android:layout_marginHorizontal="8dp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/txt_announcements"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="Duyurular"
            android:textColor="@color/light_grey"
            android:layout_below="@id/ll_sponsors"
            android:layout_marginTop="33dp"
            android:layout_marginStart="20dp"
            />

        <TextView
            android:id="@+id/txt_announcements_see_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tümünü Gör"
            android:textSize="14sp"
            android:layout_marginTop="35dp"
            android:layout_below="@id/ll_sponsors"
            android:layout_alignParentEnd="true"
            android:textColor="@color/primary"
            android:layout_marginEnd="16dp"
            />



        <androidx.cardview.widget.CardView
            android:id="@+id/cv_announcement"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            android:layout_marginTop="16dp"
            android:layout_marginHorizontal="20dp"
            app:cardBackgroundColor="@color/dark_grey"
            android:layout_below="@id/txt_announcements">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="16dp">

                <TextView
                    android:id="@+id/tv_announcement_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/primary"
                    android:textSize="18sp"
                    tools:text="title"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp">
                    <ImageView
                        android:id="@+id/iv_announcement"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/tesla"
                        android:scaleType="centerCrop"
                        />

                    <TextView
                        android:id="@+id/tv_announcement_description"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="14sp"
                        tools:text="description"
                        android:textColor="@color/light_grey"
                        android:layout_marginStart="8dp" />
                </LinearLayout>

                <Button
                    android:id="@+id/btn_see_announcement"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Etkinliği Gör"
                    android:layout_marginTop="24dp"
                    android:textSize="16sp"
                    android:textColor="@color/background"
                    android:paddingVertical="10dp"
                    android:theme="@style/ThemeOverlay.Material3.Button.ElevatedButton"
                    />
            </LinearLayout>


        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/txt_event"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="Etkinlik"
            android:textColor="@color/light_grey"
            android:layout_below="@id/cv_announcement"
            android:layout_marginTop="32dp"
            android:layout_marginStart="20dp"
            />

