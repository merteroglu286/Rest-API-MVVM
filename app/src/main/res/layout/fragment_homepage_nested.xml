        <RelativeLayout
            android:id="@+id/cv_last_event"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginHorizontal="20dp"
            android:background="@drawable/white_outlined_button_bg"
            android:layout_below="@id/txt_event">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tv_last_event_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/primary"
                        android:textSize="16sp"
                        tools:text="title"/>
                    <TextView
                        android:id="@+id/tv_last_event_date"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textAlignment="textEnd"
                        android:textColor="@color/light"
                        android:textSize="14sp"
                        tools:text="date"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp">
                    <ImageView
                        android:id="@+id/iv_last_event"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/tesla"
                        android:scaleType="centerCrop"
                        />

                    <TextView
                        android:id="@+id/tv_last_event_description"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="14sp"
                        tools:text="description"
                        android:textColor="@color/light_grey"
                        android:layout_marginHorizontal="8dp" />

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/marker"
                        android:layout_gravity="center_vertical"
                        />
                </LinearLayout>

                <Button
                    android:id="@+id/btn_see_last_event"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Etkinliği Gör"
                    android:layout_marginTop="24dp"
                    android:textSize="16sp"
                    android:textColor="@color/background"
                    android:paddingVertical="10dp"
                    android:theme="@style/ThemeOverlay.Material3.Button.ElevatedButton"
                    />
            </LinearLayout>


        </RelativeLayout>

        <TextView
            android:id="@+id/txt_last_video"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="Son Yüklenen Video"
            android:textColor="@color/light_grey"
            android:layout_below="@id/cv_last_event"
            android:layout_marginTop="33dp"
            android:layout_marginStart="20dp"
            />

        <TextView
            android:id="@+id/txt_video_see_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tümünü Gör"
            android:textSize="14sp"
            android:layout_marginTop="35dp"
            android:layout_below="@id/cv_last_event"
            android:layout_alignParentEnd="true"
            android:textColor="@color/primary"
            android:layout_marginEnd="16dp"
            />


        <androidx.cardview.widget.CardView
            android:id="@+id/cv_last_video"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_weight="1"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            android:layout_marginHorizontal="20dp"
            android:background="@color/light"
            android:layout_below="@id/txt_last_video"
            android:layout_marginTop="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <ImageView
                    android:id="@+id/iv_last_video"
                    android:layout_width="match_parent"
                    android:layout_height="104dp"
                    android:background="@color/dark_grey"
                    android:scaleType="fitXY"/>
                <WebView
                    android:id="@+id/wv_last_video"
                    android:layout_width="match_parent"
                    android:layout_height="104dp"
                    android:background="@color/dark_grey"
                    tools:ignore="WebViewLayout"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/tv_last_video"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Video Başlığı"
                    android:textSize="14sp"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="16dp"
                    android:textColor="@color/background"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/txt_glossary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="Sözlük"
            android:textColor="@color/light_grey"
            android:layout_below="@id/cv_last_video"
            android:layout_marginTop="33dp"
            android:layout_marginStart="20dp"
            />

        <TextView
            android:id="@+id/txt_glossary_see_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tümünü Gör"
            android:textSize="14sp"
            android:layout_marginTop="35dp"
            android:layout_below="@id/cv_last_video"
            android:layout_alignParentEnd="true"
            android:textColor="@color/primary"
            android:layout_marginEnd="16dp"
            />


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_glossary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/categories_buttons_bg"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="20dp"
            android:paddingHorizontal="28dp"
            android:paddingBottom="16dp"
            android:layout_below="@id/txt_glossary">
            <TextView
                android:id="@+id/txt_glossary_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Krank Mili"
                android:textSize="14sp"
                app:layout_constraintWidth_percent="0.35"
                android:textColor="@color/light"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="16dp"
                />

            <ImageView
                android:id="@+id/iv_glossary"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="5dp"
                app:layout_constraintWidth_percent="0.35"
                app:layout_constraintHeight_percent="0.55"
                android:background="@color/light_grey"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txt_glossary_name"/>

            <TextView
                android:id="@+id/txt_glossary_description"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintWidth_percent="0.6"
                tools:text="@string/lorem"
                android:textColor="@color/light_grey"
                android:textSize="12sp"
                android:layout_marginTop="16dp"
                android:textAlignment="textEnd"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"

                />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </RelativeLayout>

</androidx.core.widget.NestedScrollView>