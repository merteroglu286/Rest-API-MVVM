<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/dialog_bg">

    <ImageView
        android:layout_width="128dp"
        android:layout_height="92dp"
        android:src="@drawable/illustration_addlsit"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="34dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ürünün ana sayfada yerini alınca sana haber vereceğiz."
        android:textColor="@color/light"
        android:layout_gravity="center_horizontal"
        android:layout_marginHorizontal="50dp"
        android:textAlignment="center"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/btn_return_to_homepage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ana Sayfaya Dön"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="42dp"
        android:layout_marginHorizontal="90dp"
        android:theme="@style/ThemeOverlay.Material3.Button.ElevatedButton"
        android:layout_marginTop="30dp" />
</LinearLayout>