<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.SearchActivity"
    android:background="@color/background"
    android:paddingTop="12dp">

    <LinearLayout
        android:id="@+id/ll_search_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="20dp">


        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/baseline_arrow_back_ios_24"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/search_bar_background">

            <SearchView
                android:id="@+id/search_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:maxLines="1"
                android:hint="Ürün / Kategori / Marka / Garaj ara"
                android:textSize="12sp"
                android:iconifiedByDefault="false"
                android:searchIcon="@null"
                android:closeIcon="@null"
                />

            <ImageView
                android:id="@+id/iv_search"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/icon_card_search_small"
                />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_empty_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_below="@id/ll_search_bar"
        android:visibility="gone"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:visibility="visible"
            android:text="Ne yazık ki aramızla eşleşen ürün bulamadık.\nTalep oluşturun ve ekibimiz sizin için talebinizi incelesin."
            android:textAlignment="center"
            android:textSize="12sp"
            android:layout_centerHorizontal="true"
            android:textColor="@color/light_grey"
            android:layout_marginTop="28dp"
            />

        <Button
            android:id="@+id/btn_create_request"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="Talep Oluştur"
            android:layout_marginTop="24dp"
            android:layout_centerHorizontal="true"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:theme="@style/ThemeOverlay.Material3.Button.ElevatedButton"

            />
    </LinearLayout>


    <TextView
        android:id="@+id/txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="İlgili Sonuçlar"
        android:layout_below="@id/ll_search_bar"
        android:textSize="14sp"
        android:textColor="@color/light_grey"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="3dp"
        android:layout_marginStart="20dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_popular_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="8dp"/>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nested"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/txt"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_category_result"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginHorizontal="20dp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_brand_result"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_garage_result"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_product_result"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"/>
        </LinearLayout>

    </androidx.core.widget.NestedScrollView>
</RelativeLayout>