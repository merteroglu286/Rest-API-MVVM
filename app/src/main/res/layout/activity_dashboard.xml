<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.Dashboard"
    android:background="@color/background">

    <FrameLayout
        android:id="@+id/frame_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/ll_bottom_nav">

    </FrameLayout>
    <LinearLayout
        android:id="@+id/ll_bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:paddingTop="12dp"
        android:background="@drawable/bottom_nav_bg"
        >

        <LinearLayout
            android:id="@+id/container_homepage"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginVertical="16dp">

            <ImageView
                android:id="@+id/iv_home"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/home"
                app:tint="@color/light"
                android:layout_marginBottom="12dp"/>

            <ImageView
                android:id="@+id/iv_home_filled"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/icon_home_filled"
                app:tint="@color/light"
                android:visibility="gone"
                android:layout_marginBottom="12dp"/>

            <TextView
                android:id="@+id/txt_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ana Sayfa"
                android:textColor="@color/light"
                android:textSize="10sp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/container_messages"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginVertical="16dp"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/iv_message"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/icon_message"
                app:tint="@color/light"
                android:layout_marginBottom="12dp"/>

            <ImageView
                android:id="@+id/iv_message_filled"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/icon_message_filled"
                app:tint="@color/light"
                android:visibility="gone"
                android:layout_marginBottom="12dp"/>

            <TextView
                android:id="@+id/txt_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mesajlar"
                android:textColor="@color/light"
                android:textSize="10sp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/container_my_garage"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/iv_my_garage"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/icon_logo"
                app:tint="@color/light"
                android:layout_marginBottom="12dp"/>

            <ImageView
                android:id="@+id/iv_my_garage_filled"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/icon_logo_filled"
                app:tint="@color/light"
                android:visibility="gone"
                android:layout_marginBottom="12dp"/>

            <TextView
                android:id="@+id/txt_my_garage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GarajÄ±m"
                android:textColor="@color/light"
                android:textSize="10sp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/container_my_masket"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginVertical="16dp"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/iv_my_basket"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/icon_shopping_bag"
                app:tint="@color/light"
                android:layout_marginBottom="12dp"/>

            <ImageView
                android:id="@+id/iv_my_basket_filled"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/icon_shopping_bag_filled"
                app:tint="@color/light"
                android:visibility="gone"
                android:layout_marginBottom="12dp"/>

            <TextView
                android:id="@+id/txt_my_basket"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sepetim"
                android:textColor="@color/light"
                android:textSize="10sp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/container_profile"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginVertical="16dp"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/iv_profile"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/icon_profile"
                app:tint="@color/light"
                android:layout_marginBottom="12dp"/>

            <ImageView
                android:id="@+id/iv_profile_filled"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/icon_profile_filled"
                app:tint="@color/light"
                android:visibility="gone"
                android:layout_marginBottom="12dp"/>

            <TextView
                android:id="@+id/txt_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Profil"
                android:textColor="@color/light"
                android:textSize="10sp"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>