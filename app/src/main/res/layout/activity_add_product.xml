<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.AddProduct"
    android:background="@color/background">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_add_product"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="@color/background"
        >
        <TextView
            android:id="@+id/toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
            android:layout_gravity="center"
            android:textSize="18sp"
            android:text="Ürün Ekle"
            android:textColor="@color/white"/>
    </androidx.appcompat.widget.Toolbar>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="24dp"
        android:layout_below="@id/toolbar_add_product"
        app:cardBackgroundColor="@color/light_black">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="24dp"
            android:paddingTop="24dp"
            android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/light"
                android:text="Ürün Adı"
                android:textSize="14sp"/>

            <EditText
                android:id="@+id/tv_product_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Motor Yağı (Min. 5 Kkarakter)"
                android:textSize="16sp"
                android:layout_marginTop="24dp"
                android:background="@drawable/black_border_outlined_bg"
                android:textColorHint="@color/light_grey"
                android:textColor="@color/light"
                android:maxLines="2"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/light"
                android:text="Ürün Açıklaması"
                android:textSize="14sp"
                android:layout_marginTop="44dp"/>

            <EditText
                android:id="@+id/tv_product_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Ürünü daha iyi anlamamız için bir kaç cümle ile bizimle paylaşmalısın…"
                android:textSize="16sp"
                android:layout_marginTop="24dp"
                android:background="@drawable/black_border_outlined_bg"
                android:textColorHint="@color/light_grey"
                android:textColor="@color/light"
                android:maxLines="2"/>

            <TextView
                android:id="@+id/tv_category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kategori"
                android:textColor="@color/light"
                android:textSize="16sp"
                android:layout_marginTop="44dp"
                android:background="@drawable/black_solid_outlined_bg"
                />

            <TextView
                android:id="@+id/tv_brand"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Marka"
                android:textColor="@color/light"
                android:textSize="16sp"
                android:layout_marginVertical="24dp"
                android:background="@drawable/black_solid_outlined_bg"
                />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/btn_create_request"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Talep Oluştur"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="64dp"
        android:layout_marginHorizontal="42dp"
        android:layout_alignParentBottom="true"
        android:theme="@style/ThemeOverlay.Material3.Button.ElevatedButton"
        android:layout_marginTop="70dp"/>
</RelativeLayout>